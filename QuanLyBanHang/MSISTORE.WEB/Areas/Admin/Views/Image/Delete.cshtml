@model DAL.Models.Image
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Delete Image";
}

<h4>Delete Image</h4>
<hr />
<div>
    <h5>Are you sure you want to delete this image?</h5>
    <div>
        <dl class="row">
            <dt class="col-sm-2">
                File
            </dt>
            <dd class="col-sm-10">
                <img src="@Model.File" alt="Image" style="max-width: 100%; height: auto;" />
            </dd>
            <dt class="col-sm-2">
                Product Name
            </dt>
            <dd class="col-sm-10">
                @Model.Prodcut.Name
            </dd>
        </dl>

        <form asp-action="delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>
