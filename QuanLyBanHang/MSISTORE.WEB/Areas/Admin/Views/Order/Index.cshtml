@model IEnumerable<DAL.Models.Order>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Uuid)
            </th>

            <th>
                Name Customer
            </th>
            <th>
                Delivery Stages 
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedAt)
            </td>
            <td>
                @if (item.IsActive == 1)
                {
                    <text>True</text>
                }
                else
                {
                    <text>Fasle</text>
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Uuid)
            </td>
           
                <td>
                    @if (item.User != null)
                    {
                        @item.User.User.FirstName @item.User.User.LastName
                    }
                    else
                    {
                        <text>No User</text>
                    }
                </td>

                <td>
                    @if (item.Statusorders.Any())
                    {
                        @item.Statusorders.FirstOrDefault().DeliveryStage
                    }
                    else
                    {
                        <text>No Delivery Stage</text>
                    }
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
            </td>
        </tr>
}
    </tbody>
</table>
